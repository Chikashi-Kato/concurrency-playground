#!/bin/bash


CURRENT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/" >/dev/null 2>&1 && pwd )"
. $CURRENT_DIR/definitions

INPUT_FILE="$ROOT_DIR/$2"
OUTPUT_FOLDER="$ROOT_DIR/$3"

function clean() {
  rm -rf $OUTPUT_FOLDER && mkdir $OUTPUT_FOLDER
}

# Output timing values in csv format.
printf "lanugage,real,user,system,cpu\n"
TIMEFORMAT='%2R,%2U,%2S,%P'
for i in "${LANGUAGES[@]}"; do
  clean && cd "$ROOT_DIR/$i" && printf "$i," && time ./run concurr $1 $INPUT_FILE $OUTPUT_FOLDER
done
